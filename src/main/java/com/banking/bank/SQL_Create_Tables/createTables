CREATE TABLE client(
    ID CHARACTER(32) NOT NULL PRIMARY KEY,
    FIRST_NAME VARCHAR (255),
    LAST_NAME VARCHAR (255),
    PATRONYMIC VARCHAR (255),
    NUMBER_PASSPORT BIGINT,
    EMAIL VARCHAR (255),
    NUMBER_PHONE BIGINT
);

CREATE TABLE credit(
    ID CHARACTER(32) NOT NULL PRIMARY KEY,
    LIMIT DECIMAL (19,2),
    PERCENT DOUBLE
);

CREATE TABLE bank(
    ID CHARACTER(32) NOT NULL PRIMARY KEY,
    CLIENT_ID CHARACTER(32),
    CREDIT_ID CHARACTER(32),
    CREDIT_OFFER_ID VARCHAR(255),
);

CREATE TABLE credit_offer(
    ID CHARACTER (32) NOT NULL PRIMARY KEY,
    CLIENT_ID CHARACTER(32),
    CREDIT_ID CHARACTER(32),
    CREDIT_AMOUNT DECIMAL (19,2),
    MOUNT INTEGER,

    FOREIGN KEY(CLIENT_ID) REFERENCES client(ID),
    FOREIGN KEY(CREDIT_ID) REFERENCES credit(ID)
);

CREATE TABLE credit_offer_payment_schedule(
    CREDIT_OFFER_ID CHARACTER(32) NOT NULL,
    PAYMENT_SCHEDULES_ID CHARACTER(32) NOT NULL,

    UNIQUE(PAYMENT_SCHEDULES_ID),
    FOREIGN KEY(CREDIT_OFFER_ID) REFERENCES credit_offer(ID)
);

CREATE TABLE payment_schedule(
    ID CHARACTER (32) NOT NULL PRIMARY KEY,
    PAYMENT_DATE DATE,
    PAYMENT_AMOUNT DECIMAL (19,2),
    REPAYMENT_CREDIT DECIMAL (19,2),
    REPAYMENT_PERCENT DECIMAL (19,2)
);
